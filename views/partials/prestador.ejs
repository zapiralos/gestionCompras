<div class="modal-header">
    <h5 class="modal-title" id="tituloPrestador">
        <i class="fas fa-user-md"></i> Prestador
    </h5>
</div>
<div class="modal-body">
    <div class="form-group row">
        <div class="form-group col form-control-sm">
            <div class="input-group mb-3">
                <input
                    type="text"
                    class="form-control"
                    name="busquedaPrestador"
                    id="busquedaPrestador"
                    placeholder="búsqueda de prestador"
                    aria-label="búsqueda de prestador"
                    aria-describedby="busquedaPrestador"
                />
                <button
                    class="btn btn-outline-secondary"
                    type="button"
                    id="botonDeBusqueda"
                >
                    <i class="fas fa-search"></i>
                </button>
                
            </div>
            
            <ul id="resultado">
                <li>
                    <a href="#" id="seleccion"></a>
                </li>        
            </ul>
        </div>
    </div>

    <div class="form-group row">
        <!-- Nombre -->
        <div class="form-group col form-control-sm">
            <label for="nombre">Nombre</label>
            <input
                type="text"
                class="form-control"
                name="nombre"
                id="nombre"
                aria-describedby="nombre"
            />
        </div>

        <!-- Apellido -->
        <div class="form-group col form-control-sm">
            <label for="apellido">Apellido</label>
            <input
                type="text"
                class="form-control"
                name="apellido"
                id="apellido"
                aria-describedby="apellido"
            />
        </div>

        <!-- cuil -->
        <div class="form-group col form-control-sm">
            <label for="cuil">Cuil</label>
            <input
                type="text"
                class="form-control"
                name="cuil"
                id="cuil"
                aria-describedby="cuil"
            />
        </div>
    </div>

    <div class="form-group row">
        <!-- Especialidad -->
        <div class="form-group col form-control-sm">
            <label for="especialidad">Especialidad</label>
            <input
                type="text"
                class="form-control"
                name="especialidad"
                id="especialidad"
                aria-describedby="especialidad"
            />
        </div>

        <!-- Matricula -->
        <div class="form-group col form-control-sm">
            <label for="matricula">Matricula</label>
            <input
                type="text"
                class="form-control"
                name="matricula"
                id="matricula"
                aria-describedby="matricula"
            />
        </div>
    </div>

    <!--implementar busqueda desde tabla de prestadores osde-->
    <button type="button" class="btn btn-outline-info btn-sm mt-3 button">
        <i class="fas fa-search"></i> Búsqueda de Prestador Osde
    </button>
    <div class="form-text">...proximamente!</div>
</div>