<!DOCTYPE html>
<html lang="en">
    <!--head-->
    <%- include("partials/head", {title: "Gestión de Compras" }) -%>

    <body class="d-flex align-items-between flex-wrap">
        <!--header-->
        <div class="align-items-start w-100">
            <%- include("partials/header") -%>
        </div>
        <!--container-->
        <section class="container mt-5 mb-5">
            <div class="row">
                <div
                    class="col-xl-7 col-lg-7 col-md-9 col-sm-12 m-auto bg-white text-dark p-4 rounded animate__animated animate__zoomIn"
                >
                    <div class="col-12">
                        <h5 class="text-secondary">
                            <i class="fas fa-border-all"></i>
                            Listado de gestiones
                        </h5>
                        <div class="dropdown-divider"></div>

                        <% for (let i=0; i < gestiones.length; i++) { %>
                        <div>
                            <div class="d-flex justify-content-end">
                                <a
                                    class="text-decoration-none"
                                    href="/gestiones/<%= gestiones[i].id %> "
                                >
                                    <small class="text-muted m-0 p-0">
                                        Gestión N°: <%= gestiones[i].id %>
                                    </small>
                                </a>
                            </div>
                            <!--datos de gestion-->
                            <div class="d-flex justify-content-between p-3 m-0">
                                <div class="gsc">
                                    <p class="text-info m-0 p-0">
                                        <small>GSC</small>
                                    </p>
                                    <p class="m-0 p-0">
                                        <%= gestiones[i].gsc %>
                                    </p>
                                </div>
                                <div class="ap">
                                    <p class="text-info m-0 p-0">
                                        <small>AP</small>
                                    </p>
                                    <p class="m-0 p-0">
                                        <%= gestiones[i].ap %>
                                    </p>
                                </div>
                                <div class="socio">
                                    <p class="text-info m-0 p-0">
                                        <small>Socio</small>
                                    </p>
                                    <p class="m-0 p-0">
                                        <%= gestiones[i].socio %>
                                    </p>
                                </div>
                                <div class="fecha">
                                    <p class="text-info m-0 p-0">
                                        <small>Fecha</small>
                                    </p>
                                    <p class="m-0 p-0">
                                        <%= gestiones[i].fecha %>
                                    </p>
                                </div>
                            </div>
                            <!--datos de prestador-->
                            <div class="d-flex justify-content-between p-3 m-0">
                                <div class="gsc">
                                    <p class="text-info m-0 p-0">
                                        <small>Prestador</small>
                                    </p>
                                    <p class="m-0 p-0">
                                        <%= gestiones[i].prestador.nombre %> <%=
                                        gestiones[i].prestador.apellido %>
                                </div>
                                <div class="ap">
                                    <p class="text-info m-0 p-0">
                                        <small>Especialidad</small>
                                    </p>
                                    <p class="m-0 p-0">
                                        <%= gestiones[i].prestador.especialidad %>
                                    </p>
                                </div>
                                <!--datos de auditor-->
                                <div class="socio">
                                    <p class="text-info m-0 p-0">
                                        <small>Auditor</small>
                                    </p>
                                    <p class="m-0 p-0">
                                        <%= gestiones[i].auditor.nombre %> <%= gestiones[i].auditor.apellido %>
                                    </p>
                                </div>
                                <!--datos de analista-->
                                <div class="socio">
                                    <p class="text-info m-0 p-0">
                                        <small>Analista</small>
                                    </p>
                                    <p class="m-0 p-0">
                                        <%= gestiones[i].compras.nombre %> <%= gestiones[i].compras.apellido %>
                                    </p>
                                </div>
                                
                            </div>
                            <!--datos de medicamento PRUEBA-->
                            <div class="d-flex justify-content-between p-3 m-0">
                                <div class="gsc">
                                    <p class="text-info m-0 p-0">
                                        <small>Medicamento Solicitado</small>
                                    </p>
                                    <% if (gestiones[i].tipo_de_gestion == 1) { %> 
                                    <p class="m-0 p-0">
                                        <%= gestiones[i].medicamentos.nom_med %> p
                                    </p>
                                    <% } %>
                                </div>
                                <div class="ap">
                                    <p class="text-info m-0 p-0">
                                        <small>Especialidad</small>
                                    </p>
                                    <p class="m-0 p-0">
                                        <%= gestiones[i].prestador.especialidad %>
                                    </p>
                                </div>
                                <!--datos de auditor-->
                                <div class="socio">
                                    <p class="text-info m-0 p-0">
                                        <small>Auditor</small>
                                    </p>
                                    <p class="m-0 p-0">
                                        <%= gestiones[i].auditor.nombre %> <%= gestiones[i].auditor.apellido %>
                                    </p>
                                </div>
                                <!--datos de analista-->
                                <div class="socio">
                                    <p class="text-info m-0 p-0">
                                        <small>Analista</small>
                                    </p>
                                    <p class="m-0 p-0">
                                        <%= gestiones[i].compras.nombre %> <%= gestiones[i].compras.apellido %>
                                    </p>
                                </div>
                                
                            </div>
                            <div class="dropdown-divider"></div>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </section>
        <!--footer-->
        <footer class="align-items-end w-100">
            <%- include("partials/footer") -%>
        </footer>
    </body>
</html>
